-- Initial formura.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                formura
version:             1.1
synopsis:            Formura is a simple language to describe stencil computation.
-- description:
homepage:            http://nushio3.github.io
license:             MIT
license-file:        LICENSE
author:              Takayuki Muranushi
maintainer:          muranushi@gmail.com
-- copyright:
category:            Language
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

source-repository head
  type: git
  location: git://github.com/nushio3/formura.git


library
  exposed-modules:
                  Formura.Utilities
                  Formura.Language.Combinator
                  Formura.Language.TExpr
                  Formura.Annotation
                  Formura.Annotation.Boundary
                  Formura.Annotation.Representation
                  Formura.Compiler
                  Formura.CommandLineOption
                  Formura.Geometry
                  Formura.GlobalEnvironment
                  Formura.NumericalConfig
                  Formura.Vec
                  Formura.Type
                  Formura.Syntax
                  Formura.Parser
                  Formura.Desugar
                  Formura.Interpreter.Value
                  Formura.Interpreter.Eval
                  Formura.OrthotopeMachine.Graph
                  Formura.OrthotopeMachine.Translate
                  Formura.OrthotopeMachine.Manifestation
                  Formura.OrthotopeMachine.TemporalBlocking
                  Formura.MPICxx.Language
                  Formura.MPICxx.Cut
                  Formura.MPICxx.Translate
                  Formura.MPIFortran.Translate


  -- other-modules:
  -- other-extensions:
  build-depends:
                base == 4.*
              , aeson
              , ansi-wl-pprint
              , binary-search >= 1.0.0.3
              , bytestring
              , cases
              , containers
              , directory
              , either
              , filepath
              , lattices
              , lens
              , mmorph
              , mtl
              , optparse-applicative
              , parsers
              , process
              , QuickCheck
              , sbv
              , syb
              , text
              , temporary
              , tostring
              , transformers
              , trifecta
              , unordered-containers
              , vector
              , yaml

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -O3 -Wall  -fno-warn-unused-do-bind -fsimpl-tick-factor=326680



executable formura
  hs-source-dirs: exe-src
  main-is: formura.hs
  default-language:    Haskell2010
  ghc-options:         -O3 -Wall -fno-warn-unused-do-bind -threaded -rtsopts -with-rtsopts=-N
--  ld-options: -static -pthread
  build-depends:
                base == 4.*
              , formura
              , aeson
              , ansi-wl-pprint
              , bytestring
              , containers
              , lens
              , text
              , trifecta
              , yaml

